{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OSI Model Simulator",
  "version": "0.1.0",
  "identifier": "com.roboticela.osi-model-simulator",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OSI Model Simulator",
        "width": 1200,
        "height": 800,
        "center": true,
        "decorations": true,
        "fullscreen": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Roboticela",
    "copyright": "Â©2026 Roboticela. All rights reserved.",
    "category": "Utility",
    "shortDescription": "OSI Model Simulator",
    "longDescription": "An interactive app that simulates the OSI model and shows how messages travel on the internet through the seven layers.",
    "homepage": "https://osi-model-simulator.roboticela.com",
    "licenseFile": "../LICENSE",
    "icon": [
      "icons/icon.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": false,
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "digestAlgorithm": "sha256",
      "nsis": {
        "installerIcon": "icons/icon.ico"
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": []
      }
    },
    "iOS": {},
    "android": {}
  },
  "plugins": {
    "updater": {
      "pubkey": "",
      "endpoints": []
    }
  }
}
